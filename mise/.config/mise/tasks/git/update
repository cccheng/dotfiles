#!/usr/bin/env ruby
#MISE description="Update Git repositories in subfolders"

Dir
    .glob("#{ENV['MISE_ORIGINAL_CWD']}/*")
    .select { |e| File.directory?(e) && File.exist?("#{e}/.git") }
    .each do |e|
        puts "\033[36mÂ»\033[1m #{e}\033[0m"
        Dir.chdir(e)
        %x[git fetch --all --prune]
        %x[git pull --rebase --autostash]
    end

