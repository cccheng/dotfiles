{
    "layer": "top",
    // "output": "eDP-1",
    "position": "top",
    "mode": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 0,

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [

    ],
    "modules-right": [
        "network",
        "memory",
        "cpu",
        "tray",
        // "mpris",
        "backlight",
        "battery",
        "bluetooth",
        "pulseaudio",
        "pulseaudio#microphone",
        "clock"
    ],

    "hyprland/workspaces": {
        "format": "{icon}",
        "show-special": true,
        "special-visible-only": true,
        "disable-scroll": true,
        "all-outputs": true,
        "sort-by": "id",
        "format-icons": {
            "Knuth": "ÔåÜ",
            "Terminal": "Ôíâ"
        },
        "on-click": "activate"
    },

    "hyprland/window": {
        "format": "{title}",
        "on-click": "hyprctl dispatch window_activate {id}",
        "on-scroll-up": "hyprctl dispatch window_raise {id}",
        "on-scroll-down": "hyprctl dispatch window_lower {id}",
        "exec": "hyprctl clients -w -f",
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "ü¶ä $1",
            "(.*) - Google Chrome": "üåè $1"
        }
    },

    "tray": {
        "icon-size": 13,
        "spacing": 10
    },

    "mpris": {
        "interval": 5,
        "format": "{player_icon}",
        "format-paused": "{player_icon}  {status_icon}",
        "tooltip-format": "{player}: {title}",
        "on-click": "playerctl play-pause",
        "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-",
        "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+",
        "player-icons": {
            "default": "ÔÄù",
            "chromium": "Ôâ®",
            "firefox": "Ôâ©",
            "kdeconnect": "Ôòü",
            "mopidy": "ÔÄÅ",
            "mpv": "Û∞êπ",
            "spotify": "ÔÜº",
            "vlc": "Û∞ïº",
            "strawberry": "ÔÄÅ"
        },
        "status-icons": {
            "paused": "Û∞êé",
            "playing": "Û∞êä",
            "stopped": "Û∞ìõ"
        }
    },

    "clock": {
        "format": "{:%A  Ôâ≤ %Y-%B-%d  Ôê∫ %H:%M:%S}",
        "interval": 1,
        "rotate": 0,
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "on-scroll": 1,
            "on-click-right": "mode",
            "weeks-pos": "right",
            "format": {
                "months": "<span color='#a6adc8'><b>{}</b></span>",
                "weeks": "<span color='#a6adc8'>w{}</span>",
                "weekdays": "<span color='#a6adc8'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b>{}</b></span>",
                "days": "<span color='#555869'><b>{}</b></span>"
            }
        }
    },

